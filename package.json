{
  "name": "chapter-components",
  "version": "0.0.0",
  "description": "UI components common to all Samsung Within projects",
  "private": true,
  "workspaces": ["packages/*"],
  "module": "dist/index.js",
  "scripts": {
    "storybook": "start-storybook -p 9001 -c .storybook",
    "clean": "rm -rf node_modules packages/*/node_modules yarn.lock",
    "lerna-build": "lerna run build",
    "lerna-updated": "lerna updated",
    "lerna-publish": "lerna publish",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "lint-staged": {
    "packages/**/src/*.{js,json}": [
      "eslint --fix",
      "prettier --config .prettierrc --write",
      "git add"
    ],
    "packages/**/src/*.{scss}": [
      "stylelint --config=.stylelintrc --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged"
    }
  },
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.5",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.5",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-info": "^4.0.9",
    "@storybook/addon-knobs": "^4.0.9",
    "@storybook/addon-options": "^4.0.8",
    "@storybook/react": "^4.0.9",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "css-loader": "^1.0.1",
    "eslint": "^5.8.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-babel": "^5.2.1",
    "eslint-plugin-prettier": "^3.0.0",
    "file-loader": "^2.0.0",
    "husky": "^1.2.0",
    "image-webpack-loader": "^4.5.0",
    "jsx-pragmatic": "^1.0.7",
    "lerna": "^3.4.3",
    "lint-staged": "^8.1.0",
    "node-sass": "^4.10.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.15.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "stylelint": "^9.7.1",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.3.2",
    "url-loader": "^1.1.2",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2"
  },
  "devDependencies": {
    "react": "^16.6.3",
    "react-dom": "^16.6.3"
  }
}
